<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tabhost" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<RelativeLayout 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">
		
			<TabWidget android:id="@android:id/tabs"
			    android:layout_alignParentBottom="true"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" />
	    
			<FrameLayout android:id="@android:id/tabcontent"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_above="@android:id/tabs">



<!-- DIRECTIONS TAB -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/directionsTab"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff024f63"
    android:orientation="vertical" >
<!-- Can be removed
    	        <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity = "center"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:text="DELFIN WAYFINDER" />
    	        -->
	    <ImageView
        android:id="@+id/logoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:src="@drawable/delfin_logo_small" 
        android:paddingTop="5dp"
        android:layout_gravity = "center"/>
	    

	    
    
    
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   		 android:layout_width="fill_parent"
  		  android:layout_height="wrap_content"
  		  android:paddingTop="10dp"
  		  android:paddingBottom="15dp"
  		   >
  		  <TextView
        android:id="@+id/startNodeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#ffffffff"
        android:layout_centerHorizontal="true"
        android:text="Location:" />
  		  
   		<Button
    		android:id="@+id/scanStart"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_below="@id/startNodeLabel"
   			android:layout_alignParentRight="true"
   			android:text="Scan" />
   		<Spinner
   			android:id="@+id/startSpin"
       		android:layout_width="fill_parent"
       		android:layout_height="wrap_content"
       		android:layout_below="@id/startNodeLabel"
       		android:layout_toLeftOf="@id/scanStart" />


	 </RelativeLayout>
	 


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingBottom="15dp" >
	        <TextView
        android:id="@+id/endNodeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#ffffffff"
        android:layout_centerHorizontal="true"
        android:text="Destination:" />
 		 <Spinner
    	    android:id="@+id/endSpin"
    	    android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_below="@id/endNodeLabel" />
         </RelativeLayout>
    <Button
        android:id="@+id/goButton"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:textSize="40sp"
        android:text="Go!" />

</LinearLayout>

<!-- MAP TAB -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapTab"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
        <TextView
        android:id="@+id/mapLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@id/mapTab"
        android:textColor="#ff000000"
        android:layout_centerHorizontal="true"
        android:text="Select a floor" />
    
        <Button
        android:id="@+id/btnMapFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/mapLabel"
        android:text="First Floor" />
        
            <Button
        android:id="@+id/btnMapSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mapLabel"
        android:layout_alignParentRight="true"
        android:text="Second Floor" />
    
		
	    <ImageView
        android:id="@+id/mapView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:layout_centerInParent="true"
        android:layout_below="@id/btnMapSec"
        
         />

</RelativeLayout>
<!-- DIRECTORY TAB MODIFIED BY KUNAL-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dirTab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/dirHeading" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="MGH Directory"
        />
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
    
    <Spinner 
        android:id="@+id/deptSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        />
    
    <Button 
        android:id="@+id/findButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Find"
        />
    </LinearLayout>
    
    
    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:drawSelectorOnTop="false"
        />
    

</LinearLayout>
    


<!-- HELP TAB -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/helpTab"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
  
    
<!-- causes entire rest of UI to break. What is the issue?? FIXED: need its own outter layout for tabs-->
<ScrollView 
    android:id="@+id/scroller"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >
    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/helpTab"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/helpLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="#ffc1c1c1"
        android:text="USER MANUAL" />
    
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ff208ca8"
        android:text="About MGH Wayfinder" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="MGH Wayfinder gives you directions to and from points within the walk-in clinic in the Wang Ambulatory Care Center at Mass General Hospital. 
        Choose or scan a barcode of your starting location. Choose your ending location. Use the generated map and list of directions to navigate to your location." />
    
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:text="To use MGH Wayfinder, you need an Android mobile phone. To download the application for the first time, the phone must have either Wi-Fi or 3G/4G Internet connection." />
    
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ff208ca8"
        android:text="Navigation" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:text="1.	First, start by choosing your starting location by selecting from the “Current Location” menu.
a.	You can also select scan to bring up your phone’s barcode scanner to scan a QR code at the hospital.
2.	Now,  touch “Go!” This will bring you to a map screen with a path drawn on it.
        " />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ff208ca8"
        android:text="Doctor Mode" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:text="By default the selection menus will be in “Patient Mode” and have limited choices (since patients cannot freely walk into an exam room without being escorted back. 
        To choose “Doctor Mode” (full menu of all points on the map), chose the options button on your Android phone and select “Doctor Mode” " />
    
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ff208ca8"
        android:text="Map View" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="1. Touch the “Map” button on the bottom bar." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:text="2. At the map screen, touch “First Floor” or “Second Floor” depending on which floor you want to view." />
    
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ff208ca8"
        android:text="Doctor Directory" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="1. Start by touching the drop down menu at the top of the page." />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="2. Choose the department you’d like to see." />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="3. Touch the “Find” button." />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:text="4. Touch the doctor’s name to view the doctor’s phone number" />

    
</LinearLayout>
</ScrollView>
</LinearLayout>
<!-- closers -->
		</FrameLayout>
	</RelativeLayout>
</TabHost>