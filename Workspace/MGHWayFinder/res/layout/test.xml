<!-- MAP TAB -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapTab"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
        <TextView
        android:id="@+id/mapLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@id/mapTab"
        android:text="                          Select a floor" />
    
        <Button
        android:id="@+id/btnMapFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/mapLabel"
        android:text="First Floor" />
        
            <Button
        android:id="@+id/btnMapSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mapLabel"
        android:layout_alignParentRight="true"
        android:text="Second Floor" />
    

    
	    <ImageView
        android:id="@+id/mapView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        
        android:layout_centerInParent="true"
        android:src="@drawable/mgh_logo"
         />

</RelativeLayout>
<!-- DIRECTORY TAB -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dirTab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/dirLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dir" />
    

</LinearLayout>

<!-- HELP TAB -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/helpTab"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/helpLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER MANUAL" />

</LinearLayout>


<!-- closers -->
		</FrameLayout>
	</RelativeLayout>
</TabHost>